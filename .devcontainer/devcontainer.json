{
  "name": "kingu_dev",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:debian",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "ms-vscode-remote.remote-containers",
        "esbenp.prettier-vscode",
        "foxundermoon.shell-format",
        "timonwong.shellcheck",
        "redhat.vscode-yaml"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/bootstrap.sh",
  "containerEnv": {
    "FLUTTER_HOME": "${localWorkspaceFolder}/_flutter/bin",
    "PUB_CACHE": "$HOME/.pub-cache/bin",
    "PATH": "$PATH:$FLUTTER_HOME:$PUB_CACHE"
  },
  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {},
    "ghcr.io/devcontainers-contrib/features/firebase-cli:1": {}
  }
}
